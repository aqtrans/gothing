{{ define "base" }}
<!DOCTYPE html>
<!--[if IE 9]><html class="lt-ie10" lang="en" > <![endif]--> 
<html lang="en" >
<head>
  {{ template "title" . }}
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Golang powered thing">
  <link rel="shortcut icon" type="image/png" href="/assets/favicon.png"/>
  <link rel="shortcut icon" type="image/ico" href="/assets/favicon.ico" />
  <link rel="stylesheet" href="//static.jba.io/bourbon.css">
  <link rel="stylesheet" href="//static.jba.io/material-icons/material-icons.css">
 </head>

<div class="modal" id="alert-modal">
  {{ .Page.FlashMsg |safeHTML }}
</div>
  
<div class="row">
  <div class="small-3 columns sidebar">
      <a href="/"><h3>{{.Page.TheName}}</a></h3>
      {{ template "sidebar" .}}
  </div>
<div class="small-9 columns body">
  <div class="alerts"></div>
{{ template "content" . }}
</div>
</div>
<footer>
</footer>
  <script> $(document).foundation(); </script>
  <script src="/assets/js/my.js"></script>
  {{ template "extra_scripts" . }}
</html>
{{ end }}
{{ define "sidebar" }}{{ end }}
{{ define "extra_scripts" }}{{ end }}
