{{ define "login_form" }}
{{ if .Page.UN }}
	<hr />	
	<p>HELLO: {{ .Page.UN }}<p>
    <ul class="side-nav">
      <li><a href="/logout"><span>Logout</span></a></li>
      <li><a href="/admin"><span>Admin</span></a></li>    
    </ul>
{{ else }}
<hr />
<div id="login-form">
<form method="post" action="/login" id="login">
<input type="text" id="username" name="username" placeholder="Username" size="12">
<input type="password" id="password" name="password" placeholder="Password" size="12">
<button type="submit" class="button">Login</button>
</form>
</div>
<script type="text/javascript">
$(document).ready(function(){
$("#login").submit(function(event){
  event.preventDefault();	
	var formData = {
	    'name'              : $('input[name=username]').val(),
	    'pw'             : $('input[name=password]').val()
	};  
	// console.log( formData.name );
	// console.log( formData.pw );
  $.post( "login", { username: formData.name, password: formData.pw }, function(data){
  	if(data=='success'){
  		$(".alerts").append("<div class=\"alert-box success\" data-alert>Successful login<a class=\"close\">&times;</a></div>");
  		$("#login-form").remove();
		$(document).foundation('alert','reflow');
  	} else if(data=='fail'){
  		$(".alerts").append("<div class=\"alert-box alert\" data-alert>Failed login<a class=\"close\">&times;</a></div>");
		$(document).foundation('alert','reflow');
  	}
  });
});
});
</script>
{{ end }} 
{{ end }}