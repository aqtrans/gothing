{{ define "title" }}<title>Image Gallery - {{.Page.TheName}}</title>{{ end }}
{{ define "sidebar" }}
    <ul class="side-nav">
      <li><a href="/"><span>Gallery</span></a></li>
    </ul>
{{ end }}
{{ define "content" }}       
<h1>Image Gallery</h1>
<div class="row">
	<ul class="inline-list"> 
	{{range .Images}}
	<li>
	<div class="thumbspacer">
	<a class="th" href="/{{.Filename}}">
	<img class="{{.Filename|imgClass}}" src="/thumbs/{{.Filename}}.png" data-gif="/imagedirect/{{.Filename}}">
	</a>
	</div>
	</li> 
	{{ end }}
	</ul>
</div>
{{ end }}
{{ define "extra_scripts" }}
<script src="/js/jquery.gifplayer.js" type="text/javascript"></script>
<script type="text/javascript" charset="utf-8">
$(function() {
    $('.gifs').gifplayer();
});
</script>
{{ end }}