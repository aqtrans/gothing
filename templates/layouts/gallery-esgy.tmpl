{{ define "title" }}<title>Image Gallery - {{.Page.TheName}}</title>{{ end }}
{{ define "sidebar" }}
    <ul class="side-nav">
      <li><a href="/"><span>Gallery</span></a></li>
    </ul>
{{ end }}
{{ define "content" }}       
<h1>Image Gallery</h1>
<div class="row">
	<ul class="inline-list"> 
	{{range .Images}}
	<li>
	<div class="thumbspacer">
	<a class="th" href="/{{.Filename}}">
	<img class="lazy" data-original="/thumbs/{{.Filename}}">
	</a>
	</div>
	</li> 
	{{ end }}
	</ul>
</div>
Using <a href="http://freezeframe.chrisantonellis.com">FreezeFrame</a>
 by <a href="http://www.chrisantonellis.com">Chris Antonellis</a>
{{ end }}
{{ define "extra_scripts" }}
<script src="/js/jquery.lazyload.js" type="text/javascript"></script>
<script type="text/javascript" charset="utf-8">
$(function() {
    $("img.lazy").lazyload();
});
{{ end }}