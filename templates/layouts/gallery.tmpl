{{ define "title" }}<title>Image Gallery - {{.Page.TheName}}</title>{{ end }}
{{ define "sidebar" }}
    {{ template "sidebar_nav" . }}
{{ end }}
{{ define "content" }} 
  <article>
    <header>Image Gallery</header>
  </article>
  <article>  
    <main>
        <ul class="gallery"> 
        {{range .Images}}
        {{$imgext := .Filename|imgExt}}
        <li>
            <a class="th" href="#">
            {{if eq $imgext "gif"}}
            <img class="{{.Filename|imgClass}}" data-gifffer="/imagedirect/{{.Filename}}">
            {{else if eq $imgext "webm"}}
            <img class="{{.Filename|imgClass}}" src="/thumbs/{{.Filename}}.png">
            {{else}}
            <img class="{{.Filename|imgClass}}" src="/thumbs/{{.Filename}}.png">
            {{end}}
            </a>
            <br>
            <a href="/i/{{.Filename}}"><i class='fa fa-external-link'></i>Link</a>
            <a href="/big/{{.Filename}}"><i class='fa fa-arrows-alt'></i>Embiggen</a>
        </li> 
        {{ end }}
        </ul>
    </main>
  </article>
{{ end }}
{{ define "extra_scripts" }}
<script src="/assets/js/gifffer.min.js" type="text/javascript"></script>
<script type="text/javascript" charset="utf-8">
window.onload = function() {
  Gifffer();
}
</script>
