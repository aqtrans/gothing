{{ define "title" }}<title>Image Gallery - {{.Page.TheName}}</title>{{ end }}
{{ define "sidebar" }}
    {{ template "sidebar_nav" . }}
    {{ template "login_form" . }}
{{ end }}
{{ define "content" }}    
{{ if .Page.Msg }}
<div data-alert class="alert-box"> 
{{ .Page.Msg | safeHTML }}
<a href="#" class="close">&times;</a> 
</div>
{{ end }}   
<h1>Image Gallery</h1>
<div class="row">
	<ul class="inline-list"> 
	{{range .Images}}
	<li>
	<div class="thumbspacer">
	<a class="th" href="/i/{{.Filename}}">
	<<img class="{{.Filename|imgClass}}" src="/thumbs/{{.Filename}}.png" data-gif="/imagedirect/{{.Filename}}">
	</a>
	</div>
	</li> 
	{{ end }}
	</ul>
</div>
<!--Using <a href="http://freezeframe.chrisantonellis.com">FreezeFrame</a>
 by <a href="http://www.chrisantonellis.com">Chris Antonellis</a>-->
{{ end }}
{{ define "extra_scripts" }}
<script src="/js/jquery.gifplayer.js" type="text/javascript"></script>
<script type="text/javascript" charset="utf-8">
$(function() {
    $('.gifs').gifplayer();
});
</script>
{{ end }}