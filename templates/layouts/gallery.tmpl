{{ define "title" }}<title>Image Gallery - {{.Page.TheName}}</title>{{ end }}
{{ define "sidebar" }}
    {{ template "sidebar_nav" . }}
{{ end }}
{{ define "content" }} 
<h1>Image Gallery</h1>
<div class="row">
	<ul class="inline-list"> 
	{{range .Images}}
    {{$imgext := .Filename|imgExt}}
	<li>
	<div class="thumbspacer">
	<a class="th" href="/i/{{.Filename}}">
    {{if $imgext eq "gif"}}
      <img class="{{.Filename|imgClass}}" src="/thumbs/{{.Filename}}.png" data-gif="/imagedirect/{{.Filename}}">
    {{else if $imgext eq "webm"}}
      <img class="{{.Filename|imgClass}}" src="/thumbs/{{.Filename}}.png" data-mode="video" data-webm="/imagedirect/{{.Filename}}">
    {{else}}
      <img class="{{.Filename|imgClass}}" src="/thumbs/{{.Filename}}.png" data-gif="/imagedirect/{{.Filename}}">
    {{end}}
	</a>
	</div>
	</li> 
	{{ end }}
	</ul>
</div>
{{ end }}
{{ define "extra_scripts" }}
<script src="/js/jquery.gifplayer.js" type="text/javascript"></script>
<script type="text/javascript" charset="utf-8">
$(function() {
    $('.gifs').gifplayer();
});
</script>
{{ end }}