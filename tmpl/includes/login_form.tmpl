{{ define "login_form" }}
{{ if .Page.UN }}
	<hr />	
	<p>HELLO: {{ .Page.UN }}	<p>
    <ul class="side-nav">
      <li><a href="/logout"><span>Logout</span></a></li>
      <li><a href="/admin"><span>Admin</span></a></li>    
    </ul>
<div id="newsnip">
<form method="post" action="/api/wiki/new" id="newsnip">
<input type="text" id="newsnip" name="newsnip" class="form-control" placeholder="New Snippet Name" size="8">
<button class="btn btn-default" type="submit">New</button>
</form>
</div>    
{{ else }}
<hr />
<div id="login">
<form method="post" action="/login" id="login">
<input type="text" id="username" name="username" placeholder="Username" size="12">
<input type="password" id="password" name="password" placeholder="Password" size="12">
<button type="submit" class="button">Login</button>
</form>
</div>
{{ end }} 
{{ end }}