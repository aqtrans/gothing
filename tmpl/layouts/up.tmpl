{{ define "title" }}<title>Upload files</title>{{ end }}
{{ define "sidebar" }}
    {{ template "sidebar_nav" . }}
    {{ template "login_form" . }}
{{ end }}
{{ define "content" }}       
<ul class="tabs" data-tab>
  <li class="tab-title active"><a href="#panel1">Upload from local</a></li>
  <li class="tab-title"><a href="#panel2">Upload from remote</a></li>
</ul>
<div class="tabs-content">
  <div class="content active" id="panel1">
	<h1>Upload a file</h1>
	<hr />
	<form action="/api/file/new" method="post" enctype="multipart/form-data" class="dropzone">
    <div class="row collapse">
      <div class="small-6 columns">
        <input type="text" name="local-file-name" placeholder="Optional filename">
      </div>
      <div class="small-4 columns">      
		<label for="file">Filename:</label>
		<input type="file" name="file" id="file">
	  </div>
	  <div class="small-2 columns">
		<input type="submit" name="submit" value="Submit" class="button success">
	  </div>
	</div>
	</form>
  </div>
  <div class="content" id="panel2">
	<h1>Upload a file from a remote URL</h1>
	<hr />
	<form method="post" action="/api/file/remote" id="rup">
	<div class="row collapse">
	<div class="small-6 columns">
	  <input type="text" name="remote" placeholder="Enter your URL...">
	</div>
	<div class="small-4 columns">
	  <input type="text" name="remote-file-name" placeholder="Optional filename">
	</div>    	
    <div class="small-2 columns">
      <input type="submit" name="submit" value="Submit" class="button success postfix">
    </div>
  </div>
  </form>
  </div>
</div>
{{ end }}
