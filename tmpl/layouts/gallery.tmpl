{{ define "title" }}<title>Image Gallery - tkot</title>{{ end }}
{{ define "sidebar" }}
    {{ template "sidebar_nav" . }}
    {{ template "login_form" . }}
{{ end }}
{{ define "content" }}       
<h1>Image Gallery</h1>
<h2>Images</h2>
<table>
<tr>
<th width="80">Link</th>
<th width="200">Date</th>
<th width="20">Hits</th>
</tr>
{{$user := .UN}}
{{range .Images}}
<tr>
<td><a href=/i/{{.Filename}}><img class="lazy" data-original="/thumbs/{{.Filename}}"></a></td>
<td>{{.Created}}</td>
<td>{{.Hits}}</td>
{{if $user}}<td><a href=/api/delete/image/{{.Filename}} class="button tiny alert">Delete</a></td>{{ end }}
{{ end }}
</table>
{{ end }}
{{ define "bottom_scripts" }}
<script src="/js/jquery.lazyload.min.js" type="text/javascript"></script>
<script type="text/javascript" charset="utf-8">
$(function() {
 $("img.lazy").lazyload();
});
</script>
{{ end }}